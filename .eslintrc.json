{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": 1,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  },
  "globals": {
    "React": true,
    "page": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
